<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <Button
        android:id="@+id/btn_motion_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Motion 01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_motion_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Motion 02"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_motion_01"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_motion_03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Motion 03"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_motion_02"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_motion_04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Motion 04"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_motion_03"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>