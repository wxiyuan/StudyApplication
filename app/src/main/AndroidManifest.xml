<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.myapplication">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CameraxActivity"
            android:label="CameraX"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".NotificationActivity"
            android:label="Notification"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AnimatorActivity"
            android:label="Animator"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ShareUiActivity"
            android:label="Share ui"
            android:parentActivityName=".AnimatorActivity" />
        <activity
            android:name=".MotionActivity"
            android:label="Motion"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MotionLayoutActivity"
            android:label="Motion Layout"
            android:parentActivityName=".MotionActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PaletteActivity"
            android:label="Palette"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".RetrofitActivity"
            android:label="Retrofit Coroutines"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>